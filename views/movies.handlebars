<section id="video">
  <div class="container mb-3">
    <a href="/" class="backBtn">
      <i class="fas fa-arrow-alt-circle-left"></i>
    </a>
  </div>

  <video autoplay controls width="100%" class="mb-4">
    <source src="/videos/{{ moviesrc }}" type="video/mp4">
  </video>

<div class="container">
  <article class="comments" v-if="reviews.length > 0">
    <div v-for="review in reviews">
      <review-stars :value="review.comments_rating" :disabled="true"></review-stars>
      <i class="post-date">${ review.comments_date }</i>
      <p>
        ${ review.comments_text }
      </p>
    </div>
  </article>

  <aside class="add-comment" :class="{ floatRight : reviews.length > 0 }">
    <h4>Add a Review</h4>
    <span hidden class="movId">{{ movie }}</span>
    <review-stars v-model="numStars" :disabled="false"></review-stars>
    <textarea name="review" id="review" placeholder="Leave a review!" v-model="review"></textarea>
    <input type="submit" value="Submit Review" v-on:click="addReview">
  </aside>
</div>
</section>
